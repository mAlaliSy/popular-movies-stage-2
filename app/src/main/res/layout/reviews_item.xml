<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_account_circle_black_48dp"
        android:id="@+id/imageView2"
        android:adjustViewBounds="true"
        android:tint="@color/iconColor"
        android:paddingRight="@dimen/accountIconPadding"
        android:paddingLeft="@dimen/accountIconPadding" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtReviewItem"
        android:padding="@dimen/paragraphPadding"
        android:gravity="center_vertical" />
</LinearLayout>